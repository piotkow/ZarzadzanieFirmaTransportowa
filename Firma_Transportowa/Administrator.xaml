                    <Grid Height="290" Margin="0,0,0,0" VerticalAlignment="Top" Width="180" Background="#E51E1E1E">
                    <Border BorderBrush="#FFF1A60D" BorderThickness="1,1,1,1" Background="#B2202020" Margin="0,0,0,0">
                        <StackPanel>
                                <ListBox x:Name="lbxListaPojazdow" HorizontalAlignment="Left" Height="255" Margin="0,0,0,0" VerticalAlignment="Top" Width="180" SelectionChanged="lbxListaPojazdow_SelectionChanged" Background="{x:Null}" Foreground="WhiteSmoke" BorderBrush="{x:Null}"/>
                                <Button  x:Name="btnDodaPojazd0" Content="Dodaj" Margin="1,1,1,1" Visibility="Hidden" Click="btnDodaPojazd0_Click" Width="90"  Background="#FFF1A60D" BorderBrush="Black" Height="25"></Button>
                    </StackPanel>
                    </Border>
                    </Grid>
                    </Grid>
                </StackPanel>

                <!--////////////////////////////////////////////////////////////////////////////////////-->
                <Grid x:Name="grdSzczegolyPojazdu" HorizontalAlignment="Left" Height="288" Margin="560,48,0,0" VerticalAlignment="Top" Width="620" Visibility="Visible">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,87">
                        <Grid Width="200" Height="200" Margin="10,0,0,0">
                            <Image x:Name="imgPojazd" Height="130" Width="130" Margin="0,0,0,0"/>
                        </Grid>
                        <StackPanel Orientation="Vertical" Margin="20,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="376" >
                            <Label x:Name="lblNazwaModelu" HorizontalAlignment="Left"  FontSize="16" Margin="0,10,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFD3AF38"/>
                            <Label x:Name="lblCena" HorizontalAlignment="Left" FontSize="16" Margin="0,10,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFD3AF38"/>
                            <Label x:Name="lblNrRejestracji" HorizontalAlignment="Left" FontSize="16" Margin="0,10,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFD3AF38"/>
                            <Label x:Name="lblStatusPojazdu" HorizontalAlignment="Left" FontSize="16" Margin="0,10,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFD3AF38"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!--////////////////////////////////////////////////////////////////////////////////////-->
